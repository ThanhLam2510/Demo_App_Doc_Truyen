<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_margin="8dp"
    android:background="?attr/backgr"
    android:id="@+id/itemquanly"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237">

        <LinearLayout
            android:padding="6dp"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:background="@drawable/boder_4"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_6"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imgCommicql"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:padding="5dp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemTenTieuDeql"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="Mokushiroku no Yonkishi"
                    android:textColor="@color/purple_500"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/itemTenNoiDungql"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/allerta"
                    android:text="Ten Noi dung"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="?attr/text"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/suaxoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgXoaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:src="@android:drawable/ic_menu_delete" />

                <ImageView
                    android:id="@+id/imgSuaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

            </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>