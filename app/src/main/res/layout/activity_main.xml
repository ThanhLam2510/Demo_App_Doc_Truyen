<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.app_doc_truyen.Activity.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgr"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/contentV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <androidx.viewpager.widget.ViewPager

            android:id="@+id/viewPa"
            android:layout_above="@+id/bottomNaVi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/bottomNaVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#989574"
            app:menu="@menu/item_bottom" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>